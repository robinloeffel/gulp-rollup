{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es2022"],
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "skipLibCheck": true,
    "moduleDetection": "force",
    "declaration": true,
    "outDir": "dist"
  },
  "include": ["source"],
  "exclude": ["node_modules"]
}
